{% extends "layout.njk" %}

{% block content %}
  {% block head %}
    <title>Cursos Rocketseat </title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  {% endblock %}
    <div id="wrapper">
      <h1>Conte√∫dos</h1>
    </div>

    <section class="cards">
        <div class="card" id="{{item.id}}">
          <div class="card__image-container">
            <img src="{{item.img_url}}" alt="{{item.title}}">
          </div>
          <div class="card__contents">
            <p>{{item.title}}</p>
          </div>
          <div class="card__author-post">
            <p>{{item.lesson}}</p>
            <div class="card__time">
              <p>{{item.price}}</p>
            </div>
          </div>
        </div>
    </section> 

    </div>

{% endblock %}