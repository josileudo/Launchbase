{% extends "layout.njk" %}

{% block content %}
  <section class="cards">
   {% for item in items %}
    <div class="card" id="asinhas.png">
      <div class="card__image-container">
        <img src="{{item.image}}" alt="imagem {{item.title}}">
      </div>
      <div class="card__infor-content">
        <h1>{{item.title}}</h1>
      </div>
      <div class="card__autor-content">
        <p>{{item.author}}</p>
      </div>
    </div>
    {% endfor %}
  </section>

  <script src="scripts.js"></script>

{% endblock %}