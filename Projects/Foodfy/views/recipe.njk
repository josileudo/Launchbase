{% extends "layout.njk" %}
{% block content %}
 
 {% block head %}
    <title>{{item.title}}</title>
  {% endblock %}
 
  <section class="recipe-container" >
   
    <div class="recipe" id="{{item.id}}">
      <div class="image-recipe">
        <img src="{{item.image}}" alt="imagem {{item.title}}">
      </div>
      <div class="infor-recipe">
        <h1>{{item.title}}</h1>
        <p>Por {{item.author}}</p>
      </div>
    </div>
   
  </section>

  <script src="scripts.js"></script>

{% endblock %}