{% extends "layout.njk" %}
{% block content %}
 
 {% block head %}
    <title>{{item.title}}</title>
  {% endblock %}
 
  <section class="cards">
   
    <div class="card" id="{{item.id}}">
      <div class="card__image-container">
        <img src="{{item.image}}" alt="imagem {{item.title}}">
      </div>
      <div class="card__infor-content">
        <h1>{{item.title}}</h1>
      </div>
      <div class="card__autor-content">
        <p>{{item.author}}</p>
      </div>
    </div>
   
  </section>

  <script src="scripts.js"></script>

{% endblock %}